<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="1dp"
    android:background="@drawable/side_nav_bar"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/name_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Donkey"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:textColor="#000C5D"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />


    <TextView
        android:id="@+id/definition_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definition: red"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/name_object"
        app:layout_constraintTop_toBottomOf="@id/name_object"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/Synonym_object"
        app:layout_constraintTop_toBottomOf="@id/definition_object"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Synonym: head"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.2"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="@id/name_object"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:textColor="#0066FF"
        android:textStyle="bold"
        android:text="Russian word "
        android:layout_margin="10dp"
        app:layout_constraintHorizontal_bias="0.8"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.11.2021"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Synonym_object"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="10dp"
        android:text="This is a comment that is what you learnt"
        app:layout_constraintTop_toBottomOf="@id/date_txt"/>


</androidx.constraintlayout.widget.ConstraintLayout>